<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintana"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:background="@null">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/grennadd" />

    <Button
        android:id="@+id/kayıtgelirbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="KAYIT"
        app:layout_constraintEnd_toEndOf="@+id/textinfo"
        app:layout_constraintTop_toBottomOf="@+id/monthrepeat" />

    <TextView
        android:id="@+id/masrafkonu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/borders"
        android:freezesText="true"
        android:padding="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <EditText
        android:id="@+id/informationtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="17"
        android:paddingBottom="18dp"
        android:singleLine="true"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/infoerror"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toTopOf="@+id/textView18" />

    <TextView
        android:id="@+id/textinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:background="@mipmap/borders"
        android:padding="18dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarihpicker" />

    <EditText
        android:id="@+id/pricetxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@null"
        android:inputType="numberDecimal"
        android:maxLength="20"
        android:paddingBottom="20dp"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColorHighlight="@color/colorAccent"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textinfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19" />

    <TextView
        android:id="@+id/tarihpicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:background="@mipmap/borders"
        android:padding="20dp"
        android:text="Tarih Girmek İçin Tıklayınız"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/masrafkonu" />

    <Button
        android:id="@+id/deletegelirbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="IPTAL"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/kayıtgelirbtn"
        app:layout_constraintEnd_toStartOf="@+id/kayıtgelirbtn"
        app:layout_constraintTop_toTopOf="@+id/kayıtgelirbtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:text="GELIR KAYIT"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <Spinner
        android:id="@+id/spinnerlabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        app:layout_constraintStart_toStartOf="@+id/textinfo"
        app:layout_constraintTop_toBottomOf="@+id/textinfo" />

    <ImageView
        android:id="@+id/tariherror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tarihpicker"
        app:layout_constraintEnd_toEndOf="@+id/tarihpicker"
        app:layout_constraintTop_toTopOf="@+id/tarihpicker"
        app:srcCompat="@android:drawable/presence_busy" />

    <ImageView
        android:id="@+id/tutarerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textinfo"
        app:layout_constraintEnd_toEndOf="@+id/textinfo"
        app:layout_constraintTop_toTopOf="@+id/textinfo"
        app:srcCompat="@android:drawable/presence_busy" />

    <CheckBox
        android:id="@+id/monthrepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Her Ay Tekrarla"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/spinnerlabel"
        app:layout_constraintEnd_toEndOf="@+id/textinfo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/spinnerlabel"
        app:layout_constraintTop_toTopOf="@+id/spinnerlabel" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Açıklama: "
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tarihpicker"
        app:layout_constraintStart_toStartOf="@+id/masrafkonu"
        app:layout_constraintTop_toTopOf="@+id/masrafkonu" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Tutar: ₺"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textinfo"
        app:layout_constraintStart_toStartOf="@+id/textinfo"
        app:layout_constraintTop_toTopOf="@+id/textinfo" />

    <ImageView
        android:id="@+id/infoerror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="3dip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/masrafkonu"
        app:layout_constraintEnd_toEndOf="@+id/masrafkonu"
        app:layout_constraintTop_toTopOf="@+id/masrafkonu"
        app:srcCompat="@android:drawable/presence_busy" />

</android.support.constraint.ConstraintLayout>